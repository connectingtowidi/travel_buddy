<div class="container">
    <h1>Your Itineraries</h1>
    
    <!-- Filter section -->
    <div class="filter-row mt-3">
        <div class="col-md-3 col-sm-6 col-12 mb-2">
            <!-- Your existing filter dropdowns -->
        </div>
        <!-- ... other filter columns ... -->
    </div>

    <!-- Itinerary cards grid -->
    <div class="row">
        <% @itineraries.each do |itinerary| %>
            <%= link_to itinerary_path(itinerary), class: "text-decoration-none" do %>
                <div class="card m-3" style="width: 24rem; padding-left: 0px; padding-right: 0px; border-radius: 15px;">
                    <%= image_tag "garden-by-the-bay.png", class: "card-img-fluid", style: "width: 100%; height: 200px; object-fit: cover; padding: 0px; border-radius: 15px 15px 0px 0px;" %>
                    <div class="card-body">
                        <h5 class="card-title">
                            #<%= itinerary.id %> - <%= itinerary.name %>
                        </h5>
                        <p class="card-text"><%= itinerary.start_date %> - <%= itinerary.end_date %></p>
                        <span class="btn btn-primary">Details</span>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>

    <%= link_to "New Itinerary", new_itinerary_path, class: "btn btn-primary" %>
</div>
