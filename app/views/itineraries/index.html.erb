<div class="container">
    <h1>Your Itineraries</h1>
    <div class="row">
        <% @itineraries.each do |itinerary| %>
            <div class="card m-3" style="width: 24rem; padding-left: 0px; padding-right: 0px; border-radius: 15px;">
                <%= image_tag "garden-by-the-bay.png", class: "card-img-fluid", style: "width: 100%; height: 200px; object-fit: cover; padding: 0px; border-radius: 15px 15px 0px 0px;" %>
                <div class="card-body">
                    <h5 class="card-title"><%= itinerary.name %></h5>
                    <p class="card-text"><%= itinerary.start_date %> - <%= itinerary.end_date %></p>
                    <a href="/itineraries/<%= itinerary.id %>" class="btn btn-primary">Details</a>
                </div>
            </div>
        <% end %>
    </div>

    <%= link_to "New Itinerary", new_itinerary_path %>
</div>
